apt-get install -y wget ca-certificates    apt-transport-https  curl net-tools  dpkg  
du -sh /*     #查看各个目录大小
touch   #创建空文件
getconf LONG_BIT  #系统多少位
uname -m  #系统构架 
find /  -name    #查找文件位置
netstat -lnp|grep 80   #端口使用情况
sudo apt-get remove <programname> 卸载
#中文乱码
apt-get install locales
dpkg-reconfigure locales
